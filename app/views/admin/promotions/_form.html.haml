= simple_form_for [:admin, @promotion] do |f|
  .row.pb-2
    .col-md-6
      = f.input :name, input_html: { autocomplete: "off", placeholder: "Enter promotion name" }
    .col-md-6
      = f.input :view_count, input_html: { autocomplete: "off", placeholder: "Enter view count" }

  = f.submit t("helpers.submit.submit", default: "Submit"), class: "btn btn-success"
  = link_to t('.cancel', default: t("helpers.links.cancel")), admin_promotions_path, class: "btn btn-outline-secondary"
