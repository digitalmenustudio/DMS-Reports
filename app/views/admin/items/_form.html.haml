= simple_form_for [:admin, @item] do |f|
  .row.pb-2
    .col-md-6
      = f.input :name, input_html: { autocomplete: "off", placeholder: "Enter item name" }
    .col-md-6
      = f.input :item_type, as: :select, collection: ['cocktail', 'food'], prompt: "Select item type"

  .row.pb-2
    .col-md-6
      = f.input :clicks, input_html: { autocomplete: "off", placeholder: "Enter number of clicks" }
    .col-md-6
      = f.input :likes, input_html: { autocomplete: "off", placeholder: "Enter number of likes" }

  = f.submit t("helpers.submit.submit", default: "Submit"), class: "btn btn-success"
  = link_to t('.cancel', default: t("helpers.links.cancel")), admin_items_path, class: "btn btn-outline-secondary"
